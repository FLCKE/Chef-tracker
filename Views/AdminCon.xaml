<UserControl x:Class="Chef_tracker.Views.AdminCon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chef_tracker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="622">
    <Grid Background="White">
        <TextBlock Text="Connexion" FontSize="30" FontWeight="Bold" Foreground="#FFB438" HorizontalAlignment="Center" Margin="0,100,0,0"/>
        <StackPanel VerticalAlignment="center" HorizontalAlignment="Center" Width="500"  >
            <TextBlock Text="Email:" FontSize="24" Margin="0,0,0,5" Foreground="DarkGray"/>
            <Border CornerRadius="10" BorderThickness="1" Background="#F5F5F5">
                <TextBox  Name="user_mail" Height="30" Margin="0,0,0,5" Background="Transparent" BorderThickness="0" FontSize="24" />
            </Border>

            <TextBlock Text="Mot de passe:" FontSize="24" Margin="0,0,0,5" Foreground="DarkGray"/>
            <Border CornerRadius="10" BorderThickness="1" Background="#F5F5F5">
                
            <PasswordBox Name="password" Height="30" Margin="0,0,0,5"  FontSize="24" Background="Transparent" BorderThickness="0"/>
            </Border>
            <Button Content="Valider" Click="Validate_Click" Width="100" Height="40" Foreground="White" Background="#FFB438" FontSize="25" FontWeight="Bold" Margin="0,20,0,0" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>
